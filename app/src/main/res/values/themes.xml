<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema principal de la aplicación -->
    <style name="Theme.Pstudy" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Aplicar el modo pantalla completa -->
        <item name="android:windowFullscreen">true</item>
        <!-- Ocultar la ActionBar -->
        <item name="android:windowActionBar">false</item>
        <!-- No superponer el modo de acción -->
        <item name="android:windowActionModeOverlay">false</item>
        <!-- Ocultar el título de la ventana -->
        <item name="android:windowNoTitle">true</item>
        <!-- Superponer la ActionBar -->
        <item name="android:windowActionBarOverlay">true</item>

    </style>

    <!-- Tema sin ActionBar -->
    <style name="Theme.Pstudy.NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Overlay para la barra de acción -->
    <style name="Theme.Pstudy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Overlay para los popups -->
    <style name="Theme.Pstudy.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>
